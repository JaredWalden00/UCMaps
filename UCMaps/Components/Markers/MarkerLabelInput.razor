<!-- MarkerLabelInput.razor -->
<div>
    <input type="text" @bind="LabelText" placeholder="Enter label">
    <button @onclick="ConfirmLabel">Confirm</button>
</div>

@code {
    [Parameter]
    public string LabelText { get; set; }

    [Parameter]
    public EventCallback<string> OnConfirm { get; set; }

    private async Task ConfirmLabel()
    {
        await OnConfirm.InvokeAsync(LabelText);
    }
}
